@{
    Layout = "_Layout";
    ViewBag.Titulo = "Cadastro de Mesa";
}

<html>
    <body>
        <main class="container my-4">
            <form class="col-4" action="/Mesa/Cadastrar" method="post">
                <div class="mb-3">
                    <label class="form-label">Número:</label>
                    <input name="Numero" type="number" class="form-control" placeholder="Digite o número da mesa...">
                </div>

                <div class="mb-3">
                    <label class="form-label">Quantidade de Lugares:</label>
                    <input name="QtdLugares" type="number" class="form-control" placeholder="Digite a quantidade de lugares...">
                </div>

                <div class="d-flex justify-content-end">
                    <a class="btn btn-secondary px-4 me-1" href="/Mesa">Voltar</a>
                    <button class="btn btn-success px-4" type="submit">Salvar</button>
                </div>
            </form>
        </main>
    </body>
</html>