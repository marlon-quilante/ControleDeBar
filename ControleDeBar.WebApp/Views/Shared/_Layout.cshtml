<html data-bs-theme="dark" lang="pt-br">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <title>@ViewBag.Titulo | Controle de Bar</title>

    <style>
        .btnMenu{
            height: 50px;
            align-content: center;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container">
            <a class="navbar-brand" style="font-size: 40px" href="/Home">Controle de Bar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse mt-3 mt-lg-0" id="navbarNav">
                <ul class="d-flex gap-2 navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="btn btn-outline-light btnMenu w-100 px-4" href="/Mesa">Mesas</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-light btnMenu w-100 px-4" href="/Garcom">Garçons</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-light btnMenu w-100 px-4" href="/Produto">Produtos</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-light btnMenu w-100 px-4" href="/Conta">Contas</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <header class="container my-2">
        <h1>@ViewBag.Titulo</h1>
    </header>

    <hr />

    <main class="container my-2">
        @RenderBody()
    </main>
</body>
</html>